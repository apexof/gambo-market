{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "esnext",
            "dom.iterable",
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve"
    },
    "include": [
        "./components"
    ],
    "exclude": [
        "node_modules"
    ]
}